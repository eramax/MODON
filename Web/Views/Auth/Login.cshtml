@model Domains.ClientVM
@{
    Layout = "~/Views/Layout/LoginLayout.cshtml";
}
<div class="auth-box on-sidebar">
    <div id="loginform">
        <div class="logo">
            <span class="db"><img style="max-height:100px" src="../../Layout/assets/imgs/logo.jpg" alt="logo" /></span>
        </div>
        <div class="row">
            <div class="col-12">
                <form action="@Url.Action("LoginSet","Auth")" method="POST" class="form-horizontal m-t-20">
                    <div class="container-fluid">
                        <div class="form-group col-md-12">
                            <label class="col-form-label" style="float:right">اسم المستخدم</label>
                            <input type="text" required class="form-control" name="UserName" id="UserName">
                        </div>
                        <div class="form-group col-md-12">
                            <label class="col-form-label" style="float:right">كلمة المرور</label>
                            <input type="password" required class="form-control" name="Password" id="password">
                        </div>
                        <div class="form-group col-md-12">
                            <button type="submit" class="btn btn-success btn-block btn-lg">تسجيل الدخول</button>
                        </div>
                        <div class="form-group col-md-12">
                            غير مشترك؟ إضغط <a href="@Url.Action("Register","Auth")" class="text-success">هنا</a> وسجل بخطوات بسيطة.
                        </div>
                        <hr />
                        <footer class="footer text-center">
                            جميع الحقوق محفوظة © 2019 الهيئة السعودية للمدن الصناعية ومناطق التقنية
                        </footer>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

